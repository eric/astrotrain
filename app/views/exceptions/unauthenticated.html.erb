<%= error_messages_for session.authentication %>
<% @login_param = Merb::Authentication::Strategies::Basic::Base.login_param %>
<% @password_param = Merb::Authentication::Strategies::Basic::Base.password_param %>

<form action="<%= slice_url(:merb_auth_slice_password, :perform_login) %>" method="POST" accept-charset="utf-8" id="login_form">
	<div><input type="hidden" name="_method" value="PUT" /></div>
	<ul>
		<li>
			<label for="<%= @login_param.to_s %>">
				Username
			</label>
			<input type="text" name="<%= @login_param.to_s %>" value="" id="<%= @login_param.to_s %>">
		</li>
		<li>
			<label for="<%= @password_param.to_s %>">
				<%= @password_param.to_s.capitalize %>
			</label>
			<input type="password" name="<%= @password_param.to_s %>" value="" id="<%= @password_param.to_s %>">
		</li>
		<li>
			<input type="submit" name="Submit" value="Log In" id="Submit">
		</li>
	</ul>
</form>